<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/global_list_item_height"
    android:background="@color/white"
    android:paddingEnd="@dimen/setting_item_padding_edge"
    android:paddingStart="@dimen/setting_item_padding_edge">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_normal_setting_name"
        style="@style/GlobalTextStyle"
        android:gravity="start|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>