<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/layout_title"
        style="@style/ToolbarLayoutStyle"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_back"
            style="@style/ToolbarLayoutBackIconStyle"
            app:layout_constraintStart_toStartOf="parent"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_toolbar_title"
            style="@style/ToolbarLayoutTitleStyle"
            app:layout_constraintStart_toEndOf="@+id/iv_back"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/tv_skip"
            style="@style/ToolbarLayoutTextButtonStyle"
            android:text="@string/skip"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <View
        android:id="@+id/top_baseline"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="@dimen/input_text_edit_padding_edge"
        android:layout_marginStart="@dimen/input_text_edit_padding_edge"
        android:layout_marginTop="@dimen/input_text_edit_padding_edge"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/layout_title"/>

    <android.support.constraint.Group
        android:id="@+id/group_current_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="tv_current_password, et_current_password, h_divider_line1"/>

    <View
        android:id="@+id/h_divider_line1"
        android:layout_width="0dp"
        android:layout_height="@dimen/global_frame_line_size"
        android:background="@color/colorDivideLine"
        app:layout_constraintEnd_toEndOf="@+id/top_baseline"
        app:layout_constraintStart_toStartOf="@+id/top_baseline"
        app:layout_constraintTop_toBottomOf="@+id/top_baseline"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_current_password"
        style="@style/TextViewWithEditText"
        android:text="@string/current_password"
        app:layout_constraintStart_toStartOf="@+id/top_baseline"
        app:layout_constraintTop_toBottomOf="@+id/h_divider_line1"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_current_password"
        style="@style/EditTextWithTextView"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/top_baseline"
        app:layout_constraintStart_toEndOf="@+id/tv_current_password"
        app:layout_constraintTop_toTopOf="@+id/tv_current_password"/>

    <View
        android:id="@+id/h_divider_line2"
        android:layout_width="0dp"
        android:layout_height="@dimen/global_frame_line_size"
        android:background="@color/colorDivideLine"
        app:layout_constraintEnd_toEndOf="@+id/top_baseline"
        app:layout_constraintStart_toStartOf="@+id/top_baseline"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_password"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_new_password"
        style="@style/TextViewWithEditText"
        android:text="@string/new_password"
        app:layout_constraintStart_toStartOf="@+id/top_baseline"
        app:layout_constraintTop_toBottomOf="@+id/tv_current_password"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_new_password"
        style="@style/EditTextWithTextView"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/top_baseline"
        app:layout_constraintStart_toEndOf="@+id/tv_new_password"
        app:layout_constraintTop_toTopOf="@+id/tv_new_password"/>

    <View
        android:id="@+id/h_divider_line3"
        android:layout_width="0dp"
        android:layout_height="@dimen/global_frame_line_size"
        android:background="@color/colorDivideLine"
        app:layout_constraintEnd_toEndOf="@+id/top_baseline"
        app:layout_constraintStart_toStartOf="@+id/top_baseline"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_password"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_confirm_password"
        style="@style/TextViewWithEditText"
        android:text="@string/confirm_password"
        app:layout_constraintStart_toStartOf="@+id/top_baseline"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_password"/>

    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/et_confirm_password"
        style="@style/EditTextWithTextView"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/top_baseline"
        app:layout_constraintStart_toEndOf="@+id/tv_confirm_password"
        app:layout_constraintTop_toTopOf="@+id/tv_confirm_password"/>

    <View
        android:id="@+id/h_divider_line4"
        android:layout_width="0dp"
        android:layout_height="@dimen/global_frame_line_size"
        android:background="@color/colorDivideLine"
        app:layout_constraintEnd_toEndOf="@+id/top_baseline"
        app:layout_constraintStart_toStartOf="@+id/top_baseline"
        app:layout_constraintTop_toBottomOf="@+id/tv_confirm_password"/>

    <View
        android:layout_width="@dimen/global_frame_line_size"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/global_frame_line_size"
        android:layout_marginTop="@dimen/global_frame_line_size"
        android:background="@color/colorDivideLine"
        app:layout_constraintBottom_toBottomOf="@+id/h_divider_line4"
        app:layout_constraintStart_toStartOf="@+id/top_baseline"
        app:layout_constraintTop_toTopOf="@+id/top_baseline"/>

    <View
        android:layout_width="@dimen/global_frame_line_size"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/global_frame_line_size"
        android:layout_marginTop="@dimen/global_frame_line_size"
        android:background="@color/colorDivideLine"
        app:layout_constraintBottom_toBottomOf="@+id/h_divider_line4"
        app:layout_constraintStart_toEndOf="@+id/tv_confirm_password"
        app:layout_constraintTop_toTopOf="@+id/top_baseline"/>

    <View
        android:layout_width="@dimen/global_frame_line_size"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/global_frame_line_size"
        android:layout_marginTop="@dimen/global_frame_line_size"
        android:background="@color/colorDivideLine"
        app:layout_constraintBottom_toBottomOf="@+id/h_divider_line4"
        app:layout_constraintEnd_toEndOf="@+id/top_baseline"
        app:layout_constraintTop_toTopOf="@+id/top_baseline"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="@dimen/global_button_height"
        android:layout_marginEnd="@dimen/input_text_edit_padding_edge"
        android:layout_marginStart="@dimen/input_text_edit_padding_edge"
        android:layout_marginTop="@dimen/global_content_padding_content"
        android:background="@drawable/bg_button"
        android:enabled="true"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/global_text_size"
        app:layout_constraintTop_toBottomOf="@+id/h_divider_line4"/>

</android.support.constraint.ConstraintLayout>