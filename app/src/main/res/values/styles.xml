<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="GlobalTextStyle">
        <item name="android:textSize">@dimen/global_text_size</item>
        <item name="android:textColor">@color/colorTextColor</item>
    </style>

    <style name="GlobalSecondaryTextStyle">
        <item name="android:textSize">@dimen/global_text_size</item>
        <item name="android:textColor">@color/colorSecondaryTextColor</item>
    </style>

    <style name="EditTextWithTextView">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/global_text_size</item>
        <item name="android:textColor">@color/colorTextColor</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextViewWithEditText">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:textSize">@dimen/global_text_size</item>
        <item name="android:textColor">@color/colorTextColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogButtonTextStyle">
        <item name="android:textSize">@dimen/global_text_size</item>
        <item name="android:textColor">@drawable/color_dialog_button_text</item>
        <item name="android:layout_height">@dimen/dialog_button_height</item>
        <item name="android:layout_width">@dimen/dialog_button_width</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GlobalDialogStyle" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="ToolbarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/global_toolbar_height</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingStart">@dimen/toolbar_content_padding_edge</item>
    </style>

    <style name="ToolbarLayoutStyleStyleWithoutStartPadding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/global_toolbar_height</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="ToolbarLayoutTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ToolbarLayoutBackIconStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/toolbar_back_icon_padding</item>
        <item name="android:paddingBottom">@dimen/toolbar_back_icon_padding</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:src">@mipmap/ic_back</item>
    </style>

    <style name="ToolbarLayoutImageButtonStyle">
        <item name="android:layout_width">@dimen/global_toolbar_height</item>
        <item name="android:layout_height">@dimen/global_toolbar_height</item>
        <item name="android:padding">@dimen/toolbar_icon_padding</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="ToolbarLayoutTextButtonStyle">
        <item name="android:layout_width">@dimen/toolbar_text_button_width</item>
        <item name="android:layout_height">@dimen/toolbar_text_button_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/toolbar_text_button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@drawable/bg_toolbar_text_button</item>
    </style>
</resources>
